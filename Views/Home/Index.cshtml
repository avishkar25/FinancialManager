@{
    ViewData["Title"] = "Dashboard";
}

<div class="container text-center">
    <h1 class="display-4">Welcome to Financial Manager</h1>
    <p>Manage your <strong>expenses, debts, and assets</strong> efficiently.</p>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">💰 Track Expenses</h5>
                    <p class="card-text">Monitor your spending habits easily.</p>
                    <a href="/Expense" class="btn btn-primary">View Expenses</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📉 Manage Debts</h5>
                    <p class="card-text">Keep track of your outstanding debts.</p>
                    <a href="/Debt" class="btn btn-danger">View Debts</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">📊 View Assets</h5>
                    <p class="card-text">Analyze your total assets in one place.</p>
                    <a href="/Asset" class="btn btn-success">View Assets</a>
                </div>
            </div>
        </div>
    </div>
</div>
